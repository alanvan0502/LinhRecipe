<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.alanvan.linhrecipe.features.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_search_by_recipe_types"
            app:destination="@id/nav_search"/>
    </fragment>

    <fragment
        android:id="@+id/nav_search"
        android:name="com.alanvan.linhrecipe.features.search.SearchFragment"
        android:label="@string/menu_search"
        tools:layout="@layout/fragment_search" >
        <argument
            android:name="recipeType"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_favorite_recipes"
        android:name="com.alanvan.linhrecipe.features.favorite_recipes.FavoriteRecipesFragment"
        android:label="@string/menu_favorite_recipes"
        tools:layout="@layout/fragment_favorite_recipes" />

</navigation>